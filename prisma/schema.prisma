// AMT SaaS - Prisma Schema
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// MULTI-TENANCY
// ============================================

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // e.g., "acme-corp" for acme-corp.amt.com
  plan      Plan     @default(FREE)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users           User[]
  assets          Asset[]
  assetCategories AssetCategory[]
  departments     Department[]

  @@map("tenants")
}

enum Plan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

// ============================================
// USERS & AUTH
// ============================================

model User {
  id            String   @id @default(cuid())
  email         String
  firstName     String
  lastName      String?
  role          Role     @default(USER)
  isSuperAdmin  Boolean  @default(false)  // NEW: Quick check for admin access
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Tenant relation (optional for superadmin)
  tenantId      String?  // CHANGED: Nullable for superadmin users
  tenant        Tenant?  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Department relation (optional)
  departmentId  String?
  department    Department? @relation(fields: [departmentId], references: [id])

  // Assets assigned to user
  assets           Asset[]
  assetAssignments AssetAssignment[]

  // Email unique per tenant (null tenantId = superadmin, unique email)
  @@unique([email, tenantId])
  @@index([tenantId])
  @@map("users")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  MANAGER
  USER
}

// ============================================
// ORGANIZATION
// ============================================

model Department {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Tenant relation
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Relations
  users     User[]

  @@unique([name, tenantId])
  @@index([tenantId])
  @@map("departments")
}

// ============================================
// ASSETS
// ============================================

// Asset Category with custom field schema
model AssetCategory {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?  // Lucide icon name (e.g., "laptop", "monitor")

  // Custom field schema - JSON array defining fields for assets in this category
  // Example: [{"key": "processor", "label": "Processor", "type": "text", "required": true}]
  fieldSchema Json     @default("[]")

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Tenant relation
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Assets in this category
  assets      Asset[]

  @@unique([tenantId, name])
  @@index([tenantId])
  @@map("asset_categories")
}

// Asset with custom fields support
model Asset {
  id            String         @id @default(cuid())
  
  // Core fields (always present)
  name          String
  serialNumber  String?
  assetTag      String?        // Internal tag like "IT-0001"
  
  // Category relation
  categoryId    String
  category      AssetCategory  @relation(fields: [categoryId], references: [id])
  
  // Custom field values - JSON object matching category's fieldSchema
  // Example: {"processor": "Intel i7", "ram": "16GB", "storage": "512GB SSD"}
  customFields  Json           @default("{}")
  
  // Status
  status        AssetStatus    @default(AVAILABLE)
  condition     AssetCondition @default(GOOD)
  
  // Location
  location      String?
  
  // Financial
  purchasePrice Decimal?       @db.Decimal(10, 2)
  purchaseDate  DateTime?
  warrantyEnd   DateTime?
  
  // Notes
  notes         String?
  
  // Metadata
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  archivedAt    DateTime?      // Set when asset is soft-deleted (RETIRED)
  
  // Tenant relation
  tenantId      String
  tenant        Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Current assignee (denormalized for quick access)
  assignedToId  String?
  assignedTo    User?          @relation(fields: [assignedToId], references: [id])
  
  // Assignment history
  assignments   AssetAssignment[]
  
  // Asset images
  images        AssetImage[]

  @@unique([tenantId, serialNumber])
  @@unique([tenantId, assetTag])
  @@index([tenantId])
  @@index([categoryId])
  @@index([status])
  @@map("assets")
}

// Asset assignment history
model AssetAssignment {
  id          String    @id @default(cuid())
  
  // Asset being assigned
  assetId     String
  asset       Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  // User being assigned to
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Assignment period
  assignedAt  DateTime  @default(now())
  returnedAt  DateTime? // Null means currently assigned
  
  // Notes
  notes       String?
  
  @@index([assetId])
  @@index([userId])
  @@map("asset_assignments")
}

// Asset images with private storage
model AssetImage {
  id          String   @id @default(cuid())
  
  // Asset relation
  assetId     String
  asset       Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  // File metadata
  fileName    String   // Original filename from upload
  filePath    String   // Storage path: "tenant-id/assets/asset-id/original-xxx.jpg"
  thumbPath   String?  // Thumbnail path (optional)
  mimeType    String   // "image/jpeg", "image/png", etc.
  size        Int      // File size in bytes
  
  // Display
  isPrimary   Boolean  @default(false)
  sortOrder   Int      @default(0)
  
  // Metadata
  createdAt   DateTime @default(now())
  
  @@index([assetId])
  @@map("asset_images")
}

enum AssetStatus {
  AVAILABLE
  ASSIGNED
  MAINTENANCE
  RETIRED
}

enum AssetCondition {
  EXCELLENT
  GOOD
  FAIR
  POOR
}
